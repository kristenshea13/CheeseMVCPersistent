@model List<CheeseMVC.Models.Cheese>

<h1>@ViewBag.Title</h1>

<form asp-controller="Cheese" asp-action="Remove">
    <table class="table">

        <tr>
            <th></th>
            <th>Name</th>
            <th>Description</th>
            <td>Category</td>
        </tr>

        @foreach (var cheese in Model)
        {
            <tr>
                <td><input type="checkbox" name="cheeseIds" value="@cheese.ID"/></td>
                <td>@cheese.Name</td>
                <td>@cheese.Description</td>
                <td>@cheese.Category.Name</td>
            </tr>
        }
    </table>

    @if (Model.Count == 0)
    {
        <p>No cheeses yet!</p>
    }

    <p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a></p>

    <button type="submit">Delete Cheese</button>
</form>