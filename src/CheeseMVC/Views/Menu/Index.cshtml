@model IEnumerable<CheeseMVC.Models.Menu>

<h1>Menus</h1>

<form asp-controller="Menu" asp-action="Remove">
    <p><a asp-controller="Menu" asp-action="Add">Add Menu</a></p>

    <ul>
        @foreach (var menu in Model)
        {

            <li>
                <input type="checkbox" name="menuIds" value="@menu.ID" />
                <a asp-controller="Menu"
                   asp-action="ViewMenu"
                   asp-route-id="@menu.ID">@menu.Name</a>
            </li>

        }
    </ul>

    <button type="submit">Delete Menu</button>



</form>